- unless notice.nil?
  .col-md-12
    .alert.alert-info.alert-dismisible.fade.show.my-3{:role => "alert"}
      %strong Noticia:
      =notice
      %button.close{"aria-label" => "close", "data-dismiss" => "alert", :type => "button"}
        %span{"aria-hidden" => "true"} x
- unless alert.nil?
  .col-md-12
    .alert.alert-danger.alert-dismisible.fade.show.my-3{:role => "alert"}
      %strong Alerta:
      =alert
      %button.close{"aria-label" => "close", "data-dismiss" => "alert", :type => "button"}
        %span{"aria-hidden" => "true"} x
