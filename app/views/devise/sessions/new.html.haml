.container
  .row.my-5
    .offset-md-1.col-md-10
      .card.text-white.p-5.bg-primary
        .card-body
          %h1.mb-4.text-center Iniciar Sesión
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = devise_error_messages!
            .row
              .col-md-3
                .form-group
                  = f.label :email
              .col-md-9
                .form-group
                  = f.email_field :email, autofocus: true, autocomplete: "email", requerid: true, class: "form-control"
            .row
              .col-md-3
                .form-group
                  = f.label :password
              .col-md-9
                .form-group
                  = f.password_field :password, autofocus: true, hint: "6 Caracteres Minimos", autocomplete: "off", requerid: true, class: "form-control"
            .row
              .col-md-3
                .form-group
                  - if devise_mapping.rememberable?
                    = f.label "Recordar"
              .col-md-9
                .form-group
                  = f.check_box :remember_me
            .row
              .offset-md-3.col-md-4
                .form-group
                  = f.submit "Iniciar Sesión", class: "btn btn-secondary btn-block"
              .col-md-4
                .form-group
                  = link_to "Registrarse", new_user_registration_path , class: "btn btn-secondary btn-block"
