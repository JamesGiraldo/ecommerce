- breadcrumb :show_product, @product
.container
  .row.my-5
    .col-md-12
      - if can? :edit, @product
        .card-md-3
          .card-body
            .row
              .col-md-4.offset-md-2
                = link_to "Edit Product", edit_product_path(@product), class: "btn btn-secondary btn-block"
              .col-md-4
                = link_to 'Add Imagen', new_product_imagen_path(@product), class: "btn btn-primary btn-block"
      .card
        .card-body
          .row
            .col-12
              = render "carousel"
            .col-md-12.my-4
              %h1= @product.p_name
              %p= @product.p_description
              %p= "Costo: #{@product.p_price}"
              %p= "En Stock: #{@product.p_quantify}"
              %p= "Costo Envio: #{@product.p_send}"
              %p= "Disponible: #{@product.p_avaliable}"
