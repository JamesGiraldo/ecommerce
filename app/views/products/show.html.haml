.container
  .row.my-5
    .col-md-12
      - if can? :edit, @product
        .card-md-3
          .card-body
            .row
              .col-md-4.offset-md-2
                = link_to 'Edit', edit_product_path(@product), class: "btn btn-secondary btn-block"
              .col-md-4
                = link_to 'Back', products_path, class: "btn btn-primary btn-block"
      .card
        .card-body
          .row
            .col-md-12.my-5
              = image_tag "", class: "fluid-img"
            .col-md-12
              %p= @product.p_name
              %p= @product.p_description
              %p= @product.p_price
              %p= @product.p_quantify
              %p= @product.p_send
              %p= @product.p_avaliable
