- breadcrumb :show_product, @product
.container.my-5
  .row
    .col-12
      .card
        .card-body
          .row
            .col-md-3
              = render "carousel"
            .col-md-9
              .row
                .col-md-12
                  %h1.text-center.my-3= @product.p_name
                .offset-md-3.col-md-3
                  = link_to "Edit Product", edit_product_path(@product), class: "botones-pegados btn btn-info btn-block"
                .col-md-3
                  = link_to 'Add Imagen', new_product_imagen_path(@product), class: "botones-pegados btn btn-primary btn-block"
                .container
                  .card-body
                    .row
                      .col-md-1
                      .col-md-11.my-2
                        %p= @product.p_description
                        %p= "Costo: #{@product.p_price}"
                        %p= "En Stock: #{@product.p_quantify}"
                        %p= "Costo Envio: #{@product.p_send}"
                        %p= "Disponible: #{@product.p_avaliable}"
                        %hr/
                        %p Categorias
                        - @product.categories.each do |category|
                          %span.badge.badge-primary
                            %strong= category.name
