%h1= img.title
%p= img.description
- if can? :update, img
  = link_to "", edit_product_imagen_path(@product, img), class: "fa fa-wrench btn btn-warning", title: "Editar?"
- if can? :delete, img
  = link_to '', [@product , img], method: :delete, data: { confirm: "Estas Seguro?" }, class:"fa fa-trash  btn btn-danger", title: "Eliminar?"
