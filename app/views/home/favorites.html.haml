- breadcrumb :favorites
.py-5
  .container
    .row
      =render "home/panel"
      .col-md-9
        .card.p-2
          .card-body
            - if @favorites.present?
              %h1.mb-3.text-center.text-capitalize= params[:action]
              %h3.mb-2.text-center Productos
              .table-responsive
                %table.table.table-hover
                  %tbody
                    - @favorites.each do |favorite|
                      %tr{:id => "p_#{favorite.id}"}
                        %td.justify-content-between.align-items-center
                          =favorite.product.p_name
                        %td
                          %span.badge.badge-pill.badge-primary.px-3.py-2.float-right{products: "#{favorite.product.id}", class:"" , :onclick => "actions.addCart(this)", :id => "c_#{favorite.id}"}
                            %i.fa.fa-fw.fa-shopping-cart.fa-lg
                          %span.badge.badge-pill.badge-primary.px-3.py-2.float-right{products: "#{favorite.product.id}", class:"" , :onclick => "actions.deleteFavorite(this, #{favorite.id})", :id => "f_#{favorite.id}"}
                            %i.fa.fa-fw.fa-star.fa-lg
            - else
              %tr
                %h1.text-center Lo Siento
                %h5.text-center No Hay Informacion Agrege Productos Ah Su Lista Favoritos...
