.py-5
  .container-fluid
    .row
      - @products.each do |product|
        .col-md-3.col-sm-12.my-3
          .card
            - if !product.imagenes.first.nil?
              = image_tag product.imagenes.first.avatar.url(:thumb), class: "card-img-top h-100"
            .card-body
              %h1.text-center.card-title= product.p_name
              %p.text-right
                =link_to product, class: "btn btn-primary mx-1" do
                  %i.fa.fa-fw.fa-eye.fa-lg
                = render "partials/buttons", product: product
    = will_paginate @products
